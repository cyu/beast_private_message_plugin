<div id="private-message" class="editbox">
<div class="container">
  <%= content_tag 'p', h(flash[:bad_reply]), :class => 'notice' if flash[:bad_reply] %>
  <% form_for :private_message, :url => private_messages_path do |f| -%>
  <%= f.hidden_field :recipient_id %>
  <table width="100%" border="0" cellpadding="0" cellspacing="0">
  	<tr>
      <td width="70%">
        <%= f.text_field :title, :class => 'primary' %>
      </td>
    </tr>
    <tr>
      <td rowspan="2" width="70%">
        <%= f.text_area :body, :rows => 8 %>
      </td>
      <td valign="top">


        <h5><%= 'Formatting Help'[] %></h5>

        <ul class="help">
          <li><%= '*bold*'[:formatting_bold] %>
          &nbsp; &nbsp; &nbsp;
          <%= '_italics_'[:formatting_italics] %>
          &nbsp; &nbsp; &nbsp;<br />
          <%= 'bq. <span>(quotes)</span>'[:formatting_blockquote] %></li>
          <li>"IBM":http://www.ibm.com</li>
          <li><%= '* or # <span>(lists)</span>'[:formatting_list] %></li>
        </ul>

      </td>
    </tr>
    <tr>
      <td valign="bottom" style="padding-bottom:15px;">
       <%= submit_tag "Send Private Message"[] %><span class="button_or">or <%= link_to_function 'cancel'[], "$('private-message').hide()" %></span>
     </td>
   </tr>
  </table>
  <% end -%>
</div>
</div>
<%= javascript_tag "$('private-message').hide();"%>
<%= javascript_tag(render(:partial => 'private_messages/user_script')) %>
